{
  "name": "@phdiniiz/utils",
  "version": "1.0.0",
  "description": "Utilitários comuns para desenvolvimento no Brasil com foco em validações, formatações e segurança",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./validation": {
      "types": "./dist/validation/index.d.ts",
      "import": "./dist/validation/index.js",
      "require": "./dist/validation/index.cjs"
    },
    "./format": {
      "types": "./dist/format/index.d.ts",
      "import": "./dist/format/index.js",
      "require": "./dist/format/index.cjs"
    },
    "./brazil": {
      "types": "./dist/brazil/index.d.ts",
      "import": "./dist/brazil/index.js",
      "require": "./dist/brazil/index.cjs"
    },
    "./converter": {
      "types": "./dist/converter/index.d.ts",
      "import": "./dist/converter/index.js",
      "require": "./dist/converter/index.cjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    },
    "./date": {
      "types": "./dist/date/index.d.ts",
      "import": "./dist/date/index.js",
      "require": "./dist/date/index.cjs"
    },
    "./security": {
      "types": "./dist/security/index.d.ts",
      "import": "./dist/security/index.js",
      "require": "./dist/security/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "SECURITY.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint src test --ext .ts",
    "lint:fix": "eslint src test --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepublishOnly": "pnpm run build && pnpm run test && pnpm run lint"
  },
  "keywords": [
    "brazil",
    "brasil",
    "utils",
    "utilities",
    "cpf",
    "cnpj",
    "cep",
    "validation",
    "format",
    "security",
    "sanitize",
    "xss",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "zod": "^3.22.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": ""
  }
}

